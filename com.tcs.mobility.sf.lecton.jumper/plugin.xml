<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.workbench.texteditor.hyperlinkDetectors">
      <hyperlinkDetector
            activate="true"
            class="com.tcs.mobility.sf.lecton.jumper.detectors.HyperlinkDetectorsService"
            description="Detects the @Service hyperlink"
            id="com.tcs.mobility.sf.lecton.jumper.hyperlinkDetectorService"
            name="SF_Service"
            targetId="org.eclipse.ui.DefaultTextEditor">
      </hyperlinkDetector>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer?after=additions">
         <menu
               label="SiteFactory Tools">
            <command
                  commandId="com.tcs.mobility.sf.lecton.jumper.analyzespringbinding"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <and>
                        <count
                              value="1">
                        </count>
                        <iterate
                              ifEmpty="false"
                              operator="or">
                           <instanceof
                                 value="org.eclipse.jdt.core.IJavaProject">
                           </instanceof></iterate>
                     </and>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="com.tcs.mobility.sf.lecton.general.project.sitefactorycommands"
            name="SiteFactory Tools">
      </category>
      <command
            categoryId="com.tcs.mobility.sf.lecton.general.project.sitefactorycommands"
            id="com.tcs.mobility.sf.lecton.jumper.analyzespringbinding"
            name="Analyze Spring binding">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.tcs.mobility.sf.lecton.jumper.handlers.AnalyzeSpringBinder"
            commandId="com.tcs.mobility.sf.lecton.jumper.analyzespringbinding">
      </handler>
   </extension>

</plugin>
